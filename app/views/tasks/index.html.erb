<div class="notice">
  <p id="notice"><%= notice %></p>
</div>
<div class="content">
  <table>
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.description %></td>
          <td><%= task.status %></td>
          <td><%= link_to 'Exibir', task %></td>
          <td><%= link_to 'Editar', edit_task_path(task) %></td>
          <td><%= link_to 'Deletar', task, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nova Tarefa', new_task_path, class: "action" %>
</div>
